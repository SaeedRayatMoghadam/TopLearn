@page "{id}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using TopLearn.Core.Utilities
@model TopLearn.Web.Pages.Admin.Users.DeleteModel
@{
    ViewData["Title"] = "حذف کاربر";
}

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            حذف کاربر
        </div>
        <div class="panel-body">
            <form method="post">
                <input type="hidden" name="UserId" value="@ViewData["UserId"].ToString()"/>
                
                <dl class="dl-horizontal">
                    <dt>نام کاربری : </dt>
                    <dd>@Model.UserInfo.UserName</dd>
                    <dt>ایمیل : </dt>
                    <dd>@Model.UserInfo.Email</dd>
                    <dt>تاریخ عضویت : </dt>
                    <dd>@Model.UserInfo.RegisterDate.ToShamsi()</dd>
                    <dt></dt>
                    <dd>
                        <input type="submit" value="حذف" class="btn btn-danger"/>
                    </dd>
                </dl>
            </form>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>