@model TopLearn.Web.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">عضویت</li>
    </ul>
</nav>

<main class="client-page">
    <div class="container-content">

        <header><h2> عضویت در سایت </h2></header>

        <div class="form-layer">

            <form asp-action="Register" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="username"><i class="zmdi zmdi-account"></i></span>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="نام و نام خانوادگی" aria-describedby="username">
                </div>
                <span asp-validation-for="UserName" class="text-danger mt-1"></span>

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>
                <span asp-validation-for="Email" class="text-danger mt-1"></span>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="Password" class="text-danger mt-1"></span>

                <div class="input-group">
                    <span class="input-group-addon" id="confirmPassword"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="تکرار رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger mt-1"></span>

                <div class="link">
                    <a href=""> <i class="zmdi zmdi-account"></i> ورود به سایت </a>
                </div>
                <button class="btn btn-success"> عضویت در سایت </button>

            </form>
        </div>

    </div>
</main>