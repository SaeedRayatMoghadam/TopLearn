@model IEnumerable<TopLearn.Data.Entities.Course.Category>

<div class="main-menu">
    <div class="container">
        <nav>
            <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
            <ul>
                @foreach (var category in Model.Where(c => c.ParentId == null))
                {
                    <li>
                        <a href=""> @category.Title </a>
                        @if (Model.Any(c => c.ParentId == category.Id))
                        {
                            <ul>
                                @foreach (var subCat in Model.Where(c => c.ParentId == category.Id))
                                {
                                    <li><a href=""> @subCat.Title </a></li>
                                }
                            </ul>
                        }
                    </li>
                }

            </ul>
        </nav>
    </div>
</div>